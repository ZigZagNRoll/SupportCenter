@model SC.UI.Web.MVC.Models.ActiveUserViewModel
@Styles.Render("~/Content/Chat.css")
@{
    ViewBag.Title = "Lobby";
}

<h2>Lobby</h2>
<div class="container" id="center">
    <ul id="activeList" title="Active users">
    </ul>
    <ul id="discussion"></ul>
    <input type="hidden" id="displayname" value=@Model.UserName />
    <input type="text" id="message" onkeydown="Enter" />
    <input type="button" id="sendmessage" value="Send" />
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.0.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;

            chat.client.removeActiveUser = function () {
                $('#activeList').empty();
            };

            chat.client.fillActiveUser = function (name) {
                $('#activeList').append('<li>' + htmlEncode(name) + '</li>');
            };

            chat.client.addNewMessageToPage = function (current, name, message) {
                // Add the message to the page.
                $('#discussion').prepend('<li><strong>' + htmlEncode(name)
                    + ' </strong>' + current + ': ' + htmlEncode(message) + '</li>');

            };

            // On New User Connected
            chat.client.onNewUserConnected = function (name) {
                $('#activeList').append('<li>' + htmlEncode(name) + '</li>');
            };

            chat.client.onConnected = function (name) {
                $('#activeList').append('<li>' + htmlEncode(name) + '</li>');
            };

            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            if (!$.connection.hub.start().done(function () {
                chat.server.connect($('#displayname').val());
                $('#sendmessage').click(function () {
                // Call the Send method on the hub.
                    var msg = $("#message").val();
                    if (msg.length > 0) {
                    chat.server.send(dateTime(), $('#displayname').val(), msg.toString());
                    }
                // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
            });
                $(document).ready(function () {
                   $('#message').keypress(function (e) {
                    if (e.keyCode == 13) {
                    $('#sendmessage').click();
                    }
            });
                });
            })
            ){
                prompt("kan geen connectie maken");
            }
        });

